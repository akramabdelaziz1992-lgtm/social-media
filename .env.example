# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=almasar_suite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./.wwebjs_auth
WHATSAPP_WEBHOOK_URL=https://your-domain.railway.app/webhooks/whatsapp

# WhatsApp Business API (Meta) - Optional
WHATSAPP_BUSINESS_PHONE_ID=your_phone_number_id
WHATSAPP_BUSINESS_TOKEN=your_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# Server Configuration
PORT=4000
NODE_ENV=production
FRONTEND_URL=https://your-frontend.railway.app

# Storage Configuration (للملفات والصور)
STORAGE_TYPE=local
# إذا استخدمت AWS S3 للتخزين السحابي:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=almasar-storage

# Redis Configuration (Optional - لتحسين الأداء)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (للإشعارات)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Twilio Configuration (للمكالمات الصوتية)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI Configuration (للذكاء الاصطناعي)
OPENAI_API_KEY=your_openai_api_key

# Multi-User Department Configuration
ENABLE_DEPARTMENTS=true
DEPARTMENTS=حجوزات,مبيعات,محاسبة
DEFAULT_DEPARTMENT=مبيعات
