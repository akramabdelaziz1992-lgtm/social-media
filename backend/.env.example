# Application
NODE_ENV=development
PORT=4000
APP_URL=http://localhost:4000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=almasar
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/almasar

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT Secret Keys
JWT_SECRET=change_this_to_a_very_strong_random_secret_key_in_production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=change_this_to_another_very_strong_random_secret_for_refresh
JWT_REFRESH_EXPIRATION=7d

# S3-Compatible Storage (Cloudflare R2 / AWS S3)
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_BUCKET=almasar-media
S3_REGION=auto
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_PUBLIC_URL=https://media.elmasarelsa5en.com

# WhatsApp Business Cloud API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_for_webhook
WHATSAPP_API_VERSION=v18.0

# Facebook/Meta (Messenger + Instagram)
META_APP_ID=your_facebook_app_id
META_APP_SECRET=your_facebook_app_secret
META_PAGE_ACCESS_TOKEN=your_page_access_token
META_VERIFY_TOKEN=your_custom_meta_verify_token
META_API_VERSION=v18.0

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=your_custom_telegram_webhook_secret

# AI/ML (Optional - للردود الذكية)
OPENAI_API_KEY=your_openai_api_key_optional
AI_MODEL=gpt-4-turbo-preview

# Twilio (مركز الاتصالات - Call Center)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+966xxxxxxxxx
TWILIO_WEBHOOK_URL=https://your-domain.com/api/twilio/voice

# Twilio Voice SDK (WebRTC) - مطلوب للاتصال من المتصفح
TWILIO_API_KEY=your_twilio_api_key_here
TWILIO_API_SECRET=your_twilio_api_secret_here
TWILIO_TWIML_APP_SID=your_twiml_app_sid_here

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
